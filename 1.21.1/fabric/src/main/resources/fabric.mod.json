{
  "schemaVersion": 1,
  "id": "${mod_id}",
  "version": "${version}",
  "name": "${mod_name}",
  "description": "${description}",
  "authors": [
    "${mod_author}"
  ],
  "contact": {
    "homepage": "${mod_source_url}",
    "issues": "${mod_issue_url}",
    "sources": "${mod_source_url}"
  },
  "license": "${license}",
  "icon": "${mod_id}.png",
  "environment": "*",
  "entrypoints": {
    "main": [
      "${group}.MainFabric"
    ],
    "client": [
      "${group}.client.FabricClient"
    ],
    "server": [
      "${group}.server.FabricServer"
    ]
  },
  "mixins": [
    "${mod_id}.mixins.json",
    "${mod_id}.fabric.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=${fabric_loader_version}",
    "fabric-api": ">=${fabric_version}",
    "minecraft": "${minecraft_version}",
    "java": ">=${java_version}",
    "fzzy_config": ">=${fzzy_config_version}",
    "gk1hcore": ">=${gk1hcore_version}"
  },
  "recommends": {
    "modmenu": ">=${modmenu_version}",
    "swordblockingmechanics": ">=${swordblockingmechanics_version}"
  },
  "suggests": {
    "enderzoology": ">=${enderzoology_version}"
  },
  "custom": {
    "modmenu": {
      "links": {
        "modmenu.discord": "https://discord.gg/AwJvGzH"
      },
      "update_checker": true
    },
    "mc-publish": {
      "modrinth": "gk1h-extras",
      "curseforge": "1389898",
      "dependencies": [
        "fabricloader@>=${fabric_loader_version}#(ignore)",
        "minecraft@${minecraft_version}#(ignore)",
        "java@>=${java_version}#(ignore)",
        "fzzy_config@>=${fzzy_config_version}(required){modrinth:fzzy-config}{curseforge:1005914}",
        "gk1hcore@>=${gk1hcore_version}(required){modrinth:gk1h-core}{curseforge:1384685}",
        "swordblockingmechanics@>=${swordblockingmechanics_version}(recommended){modrinth:sword-blocking-mechanics}{curseforge:969424}",
        "enderzoology@>=${enderzoology_version}(optional){modrinth:ender-zoology}{curseforge:857968}"
      ]
    }
  }
}